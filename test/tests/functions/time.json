{
  "scenario": "functions",
  "defaultTestProperties": {
    "testType": "function",
    "locale": "en-US",
    "expErrors": false
  },
  "tests": [
    {
      "src": "{:time}",
      "exp": "{:time}",
      "expErrors": [
        {
          "type": "bad-input"
        }
      ]
    },
    {
      "src": "{horse :time}",
      "exp": "{|horse|}",
      "expErrors": [
        {
          "type": "bad-input"
        }
      ]
    },
    {
      "src": "{|2006-01-02T15:04:06| :time}"
    },
    {
      "src": "{|2006-01-02T15:04:06| :time style=medium}"
    },
    {
      "src": ".local $t = {|2006-01-02T15:04:06| :time style=medium} {{{$t :time}}}"
    },
    {
      "src": ".local $d = {|2006-01-02T15:04:06| :date} {{{$d :time}}}"
    }
  ]
}
